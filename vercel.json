{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json", 
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/stories/generate.js",
      "use": "@vercel/node",
      "config": { "maxDuration": 30 }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)", 
      "dest": "/client/dist/$1"
    }
  ]
}